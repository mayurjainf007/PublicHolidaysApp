@model List<PublicHolidaysApp.Models.HolidayModel>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h3>Public Holidays Finder (MVC â€“ Part I)</h3>
    <center>
        <form method="get" action="/Home/Index">
            <table>
                <tr>
                    <td>Country Code: </td>
                    <td>
                        <input type="text" id="txtCountryCode" name="countryCode" />
                    </td>
                    <td>Year: </td>
                    <td>
                        <input type="text" id="txtYear" name="year" />
                    </td>
                    <td>
                        <input type="submit" value="Submit" />
                    </td>
                </tr>
            </table>
            <hr />
        </form>
    </center>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered table-striped table-sm">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Local Name</th>
                    <th>Country Code</th>
                    <th>Global</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date?.ToShortDateString()</td>
                    <td>@item.Name</td>
                    <td>@item.LocalName</td>
                    <td>@item.CountryCode</td>
                    <td>@item.Global</td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
